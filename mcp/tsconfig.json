{
  "compilerOptions": {
    "target": "ES2019",
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "lib"
  ]
}